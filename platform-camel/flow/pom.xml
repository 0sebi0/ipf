        <osgi.export.pkg>
            org.openehealth.ipf.platform.camel.flow.*
        </osgi.export.pkg>
        <osgi.import.pkg>
            org.apache.camel,
            org.apache.camel.model,
            org.apache.camel.processor,
            *
        </osgi.import.pkg>
        <!--
            Dynamic imports are needed when we serialize and deserialize
            message payloads to and from packet bytes. It's turned off 
            for development purposes to ensure that other required classes
            aren't loaded via dynamic imports.
         -->
        <!-- 
        <osgi.dynamic.import.pkg>
