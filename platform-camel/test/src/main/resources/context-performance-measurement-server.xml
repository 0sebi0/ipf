<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ctx="http://www.springframework.org/schema/context" xmlns:lang="http://www.springframework.org/schema/lang"
    xmlns:camel="http://activemq.apache.org/camel/schema/spring"
    xsi:schemaLocation="
http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/lang 
http://www.springframework.org/schema/lang/spring-lang-2.5.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-2.5.xsd
http://activemq.apache.org/camel/schema/spring 
http://activemq.apache.org/camel/schema/spring/camel-spring.xsd">

    <!-- ============================================================== -->
    <!-- Setup of the performance measurement server                    -->
    <!-- ============================================================== -->

    <ctx:property-placeholder
        location="classpath:/performance.measurement.server.properties"/>

    <!-- ============================================================== -->
    <!-- Setup of the Camel route of the performance measurement server -->
    <!-- ============================================================== -->

    <camel:camelContext id="camelContext">
        <camel:jmxAgent id="agent" disabled="true"/>
    </camel:camelContext>

    <bean id="producerTemplate" factory-bean="camelContext" factory-method="createProducerTemplate">
    </bean>

   
    <bean id="performanceMeasurmentRouteBuilder" depends-on="routeModelExtender"
        class="org.openehealth.ipf.platform.camel.test.performance.route.PerformanceMeasurementRouteBuilder">
        <property name="httpPort" value="${http.port}"/>
    </bean>
    
    <bean id="coreModelExtension"
        class="org.openehealth.ipf.platform.camel.core.extend.CoreModelExtension">
    </bean>

    <bean id="routeModelExtender"
        class="org.openehealth.ipf.platform.camel.core.extend.DefaultModelExtender">
        <property name="routeModelExtensions">
            <list>
                <ref bean="coreModelExtension"/>
            </list>
        </property>
    </bean>

    <!-- ============================================================== -->
    <!--   Setup of the HTTP request handler                            -->
    <!--  ============================================================= -->


    <bean id="performanceRequestHandler"
        class="org.openehealth.ipf.commons.test.performance.handler.PerformanceRequestHandler">
        <property name="statisticsManager" ref="statisticsManager"/>
    </bean>

    <!-- ============================================================== -->
    <!--  Setup of the application statistics                           -->
    <!--  ============================================================= -->

    <bean id="statisticsManager"
        class="org.openehealth.ipf.commons.test.performance.StatisticsManager">
        <property name="bindings">
            <map>
                <entry key-ref="throughtputDistributionStatistics"
                    value-ref="throughtputDistributionStatisticsRenderer"/>
                <entry key-ref="processingTimeStatistics"
                    value-ref="processingTimeStatisticsRenderer"/>
            </map>
        </property>
    </bean>

    <!-- ================================================================== -->
    <!-- Definition of statistics for the performance server                -->
    <!-- ================================================================== -->

    <bean id="throughtputDistributionStatistics"
        class="org.openehealth.ipf.commons.test.performance.throughput.ThroughputDistributionStatistics">
        <property name="numberOfIntervalBins" value="30"/>
    </bean>
    <bean id="throughtputDistributionStatisticsRenderer"
        class="org.openehealth.ipf.commons.test.performance.throughput.ThroughputDistributionStatisticsRenderer"/>

    <bean id="processingTimeStatistics"
        class="org.openehealth.ipf.commons.test.performance.processingtime.ProcessingTimeStatistics"/>
    <bean id="processingTimeStatisticsRenderer"
        class="org.openehealth.ipf.commons.test.performance.processingtime.ProcessingTimeStatisticsRenderer"/>
</beans>
