<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
">

    <bean id="ehcacheManagerConfigurationResource" class="org.springframework.core.io.ClassPathResource">
        <constructor-arg value="ehcache.xml" />
    </bean>

    <bean id="ehcacheManager" class="net.sf.ehcache.CacheManager" factory-method="create">
        <constructor-arg>
            <bean class="java.io.InputStream"
                  factory-bean="ehcacheManagerConfigurationResource"
                  factory-method="getInputStream" />
        </constructor-arg>
    </bean>

    <bean id="correlator"
          class="org.openehealth.ipf.commons.ihe.ws.correlation.EhcacheAsynchronyCorrelator">
        <constructor-arg>
            <bean factory-bean="ehcacheManager" factory-method="getCache">
                <constructor-arg value="wsCorrelationCache" />
            </bean>
        </constructor-arg>
    </bean>

</beans>
