<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation=" http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.openehealth.ipf.commons</groupId>
    <artifactId>commons-ihe-transform</artifactId>
    <name>commons-ihe-transform</name>
    <packaging>pom</packaging>
     
    <parent>
        <groupId>org.openehealth.ipf.commons</groupId>
        <artifactId>commons-ihe</artifactId>
        <version>2.1-m1</version>
    </parent>
    
    <properties>
        <osgi.export.pkg>org.openehealth.ipf.commons.ihe.transform.*</osgi.export.pkg>
    </properties>
    
    <modules>
        <module>core</module>
        <module>pixfeed</module>
        <module>pdqquery</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>org.openehealth.ipf.modules</groupId>
            <artifactId>modules-hl7</artifactId>
            <version>${pom.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openehealth.ipf.modules</groupId>
            <artifactId>modules-hl7dsl</artifactId>
            <version>${pom.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
              <plugin>
                <groupId>org.codehaus.groovy.maven</groupId>
                <artifactId>gmaven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>generateStubs</goal>
                            <goal>compile</goal>
                            <goal>testCompile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
	</plugins>
    </build>
</project>
