<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.openehealth.ipf.platform.manager.jmxexplorer.ui.category"
            name="%jmx_category">
      </category>
      <view
            name="%JMX_VIEW_NAME"
            icon="icons/computer_edit.png"
            category="org.openehealth.ipf.platform.manager.jmxexplorer.ui.category"
            class="org.openehealth.ipf.platform.manager.jmxexplorer.ui.views.JMXView"
            id="org.openehealth.ipf.platform.manager.jmxexplorer.ui.views.JMXView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.openehealth.ipf.platform.manager.connection.ui.perspective.DefaultPerspective">
         <view
               id="org.openehealth.ipf.platform.manager.jmxexplorer.ui.views.JMXView"
               ratio="0.95"
               relationship="stack"
               relative="org.openehealth.ipf.platform.manager.connection.ui.perspective.DefaultPerspective.main.left.top"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="true"
               id="org.eclipse.ui.console.ConsoleView"
               minimized="false"
               ratio="0.6"
               relationship="stack"
               relative="org.openehealth.ipf.platform.manager.connection.ui.perspective.DefaultPerspective.bottom.results"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
           <viewShortcut
               id="org.openehealth.ipf.platform.manager.jmxexplorer.ui.views.JMXView">
         </viewShortcut>
      </perspectiveExtension>
    </extension>
    <extension
          point="org.eclipse.ui.preferencePages">
       <page
             category="org.openehealth.ipf.platform.manager.jmxexplorer.ui"
             class="org.openehealth.ipf.platform.manager.jmxexplorer.ui.preferences.JMXExplorerPreferencePage"
             id="org.openehealth.ipf.platform.manager.jmxexplorer.ui.preferences.JMXExplorerPreferencePage"
             name="%JMX_Explorer_name">
       </page>
    </extension>
    <extension
          id="org.openehealth.ipf.platform.manager.jmxexplorer.ui"
          point="org.eclipse.core.runtime.preferences">
       <initializer
             class="org.openehealth.ipf.platform.manager.jmxexplorer.ui.preferences.PreferencesInitializer">
       </initializer>
    </extension>
    <extension
          point="org.eclipse.core.runtime.adapters">
       <factory
             adaptableType="org.openehealth.ipf.platform.manager.connection.ui.tree.Node"
             class="org.openehealth.ipf.platform.manager.jmxexplorer.ui.tree.adapter.NodeAdapterFactory">
          <adapter
                type="org.openehealth.ipf.platform.manager.connection.ui.tree.Node">
          </adapter>
       </factory>
    </extension>
    <extension
          point="org.eclipse.ui.editors">
       <editor
             class="org.openehealth.ipf.platform.manager.jmxexplorer.ui.editor.MBeanNodeEditor"
             default="true"
             icon="icons/database_edit.png"
             id="org.openehealth.ipf.platform.manager.jmxexplorer.ui.editor.MBeanNodeEditor"
             name="%jmx_editor_name">
       </editor>
    </extension>

</plugin>
