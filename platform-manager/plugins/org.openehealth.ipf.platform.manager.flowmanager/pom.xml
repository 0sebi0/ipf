<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>org.openehealth.ipf.platform-manager</groupId>
		<artifactId>platform-manager</artifactId>
		<version>1.6-m2</version>
	</parent>
	
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.openehealth.ipf.platform-manager</groupId>
	<artifactId>org.openehealth.ipf.platform.manager.flowmanager</artifactId>
	<name>org.openehealth.ipf.platform.manager.flowmanager</name>
	<dependencies>
      <dependency>
        <groupId>commons-logging</groupId>
        <artifactId>commons-logging</artifactId>
      </dependency>
      <dependency>
        <groupId>log4j</groupId>
        <artifactId>log4j</artifactId>
      </dependency>
      <dependency>
        <groupId>org.eclipse</groupId>
        <artifactId>osgi</artifactId>
      </dependency>
      <dependency>
        <groupId>org.eclipse.core</groupId>
        <artifactId>runtime</artifactId>
			</dependency>
      <dependency>
        <groupId>org.openehealth.ipf.commons</groupId>
        <artifactId>commons-flow</artifactId>
        <version>${pom.version}</version>
      </dependency>
      <dependency>
        <groupId>org.openehealth.ipf.platform-manager</groupId>
        <artifactId>org.openehealth.ipf.platform.manager.connection</artifactId>
        <version>${pom.version}</version>
      </dependency>
	</dependencies>
  
  <!-- make the version dependet file, version independent.-->
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
					    <!-- provides jars for the eclipse pde.-->
						<id>provide-pde-jars</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.openehealth.ipf.commons</groupId>
									<artifactId>commons-flow</artifactId>
									<version>${pom.version}</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										lib
									</outputDirectory>
									<destFileName>
										commons-flow.jar
									</destFileName>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>