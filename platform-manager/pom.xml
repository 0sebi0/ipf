    <org.eclipse.core.runtime-version>3.3.100-v20070530</org.eclipse.core.runtime-version>
    <org.eclipse.core.databinding-version>1.0.0-I20070606-0010</org.eclipse.core.databinding-version>
    <org.eclipse.equinox.app-version>1.0.0-v20070606</org.eclipse.equinox.app-version>
    <org.eclipse.help-version>3.3.0-v20070524</org.eclipse.help-version>
    <org.eclipse.ui-version>3.3.0-I20070614-0800</org.eclipse.ui-version>
