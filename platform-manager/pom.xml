    <org.eclipse.core.filesystem-version>1.1.0-v20070606</org.eclipse.core.filesystem-version>
    <org.eclipse.core.variables-version>3.2.0-v20070426</org.eclipse.core.variables-version>
    <org.eclipse.equinox.common-version>3.3.0-v20070426</org.eclipse.equinox.common-version>
    
	</properties>
  <dependencyManagement>
    <dependencies>
    
     <dependency>
  			<groupId>com.ibm</groupId>
  			<artifactId>icu</artifactId>
  			<version>${com-ibm-icu-version}</version>
      </dependency>
      <dependency>
        <groupId>commons-codec</groupId>
        <artifactId>commons-codec</artifactId>
        <version>${commons-codec-version}</version>
      </dependency>
       <dependency>
        <groupId>org.eclipse</groupId>
        <artifactId>help</artifactId>
        <version>${org.eclipse.help-version}</version>
        <scope>compile</scope>
      </dependency>
      <dependency>
        <groupId>org.eclipse</groupId>
        <artifactId>jface</artifactId>
        <version>${org.eclipse.jface-version}</version>
        <scope>compile</scope>
      </dependency>
      <dependency>
        <groupId>org.eclipse</groupId>
        <artifactId>osgi</artifactId>
        <version>${org.eclipse-osgi-version}</version>
        <scope>compile</scope>
      </dependency>
      <dependency>
        <groupId>org.eclipse</groupId>
        <artifactId>swt</artifactId>
        <version>${org.eclipse.swt-version}</version>
        <scope>compile</scope>
      </dependency>
      <dependency>
        <groupId>org.eclipse</groupId>
        <artifactId>text</artifactId>
        <version>${org.eclipse.text-version}</version>
        <scope>compile</scope>
      </dependency>
       <dependency>
        <groupId>org.eclipse</groupId>
        <artifactId>ui</artifactId>
        <version>${org.eclipse.ui-version}</version>
        <scope>compile</scope>
      </dependency>
      
      <dependency>
  			<groupId>org.eclipse.core</groupId>
  			<artifactId>commands</artifactId>
  			<version>${org.eclipse.core.commands-version}</version>
        <scope>compile</scope>
      </dependency>
      <dependency>
        <groupId>org.eclipse.core</groupId>
        <artifactId>databinding</artifactId>
        <version>${org.eclipse.core.databinding-version}</version>
        <scope>compile</scope>
      </dependency>
      <dependency>
        <groupId>org.eclipse.core</groupId>
        <artifactId>expressions</artifactId>
        <version>${org.eclipse.core.expressions-version}</version>
        <scope>compile</scope>
      </dependency>
      <dependency>
        <groupId>org.eclipse.core</groupId>
        <artifactId>filesystem</artifactId>
        <version>${org.eclipse.core.filesystem-version}</version>
        <scope>compile</scope>
      </dependency>
      <dependency>
        <groupId>org.eclipse.core</groupId>
        <artifactId>runtime</artifactId>
        <version>${org.eclipse.core.runtime-version}</version>
        <scope>compile</scope>
      </dependency>
      <dependency>
        <groupId>org.eclipse.core</groupId>
        <artifactId>variables</artifactId>
        <version>${org.eclipse.core.variables-version}</version>
        <scope>compile</scope>
      </dependency>
     
      <dependency>
        <groupId>org.eclipse.equinox</groupId>
        <artifactId>app</artifactId>
        <version>${org.eclipse.equinox.app-version}</version>
        <scope>compile</scope>
      </dependency>
      <dependency>
        <groupId>org.eclipse.equinox</groupId>
        <artifactId>common</artifactId>
        <version>${org.eclipse.equinox.common-version}</version>
        <scope>compile</scope>
      </dependency>
     
      <dependency>
        <groupId>org.eclipse.jface</groupId>
