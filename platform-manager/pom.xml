<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation=" http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.openehealth.ipf.platform-manager</groupId>
	<artifactId>platform-manager</artifactId>
	<name>platform-manager</name>
	<packaging>pom</packaging>
  
	<!--  The project will compile only with maven version 2.0.9 + unless you provide your own artifacts with eclipse:to-maven goal -->
  <!--  and set the dependent versions. -->
  <!--  The reason for this limitation is that lower versions of Maven2  ( < 2.09) consider x.y.z-classifier < x.y.z. -->
  <!--  On the other hand the public eclipse artifacts assume that x.y.z-classifier >= x.y.z -->
  
  
	<parent>
		<groupId>org.openehealth.ipf</groupId>
		<artifactId>ipf</artifactId>
		<version>1.7-m2</version>
	</parent>

	<properties>
		<commons-codec-version>1.3</commons-codec-version>
		<properties-maven-plugin-version>1.0</properties-maven-plugin-version>
		<commons-logging-version>1.0.4</commons-logging-version>
    <org-apache-log4j-version>1.2.13</org-apache-log4j-version>
    <com-ibm-icu-version>3.6.1</com-ibm-icu-version>
    
		<!--  Version of eclipse dependency artifacts avaialble in the public repositories -->
		<org.eclipse-osgi-version>3.3.0-v20070530</org.eclipse-osgi-version>
    <org.eclipse.core.commands-version>3.3.0-I20070605-0010</org.eclipse.core.commands-version>
    <org.eclipse.equinox.common-version>3.3.0-v20070426</org.eclipse.equinox.common-version>
    <org.eclipse.swt.win32.win32.x86_version>3.3.0-v3346</org.eclipse.swt.win32.win32.x86_version>
		<org.eclipse.swt.gtk.linux.x86_version>3.3.0-v3346</org.eclipse.swt.gtk.linux.x86_version>
    <org.eclipse.swt-version>3.3.0-v3346</org.eclipse.swt-version>
    <org.eclipse.core.expressions-version>3.3.0-v20070606-0010</org.eclipse.core.expressions-version>
    <org.eclipse.ui.workbench-version>3.3.0-I20070608-1100</org.eclipse.ui.workbench-version>
    <org.eclipse.jface-version>3.3.0-I20070606-0010</org.eclipse.jface-version>
