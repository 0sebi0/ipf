<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd
http://www.springframework.org/schema/util
http://www.springframework.org/schema/util/spring-util-2.5.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:annotation-config/>
    
    <!--
        Default properties.
     -->
    <util:properties id="service.properties" location="classpath:META-INF/spring/service.properties"/>

    <!--
        Service implementation.
     -->
    <bean id="sampleTransmogrifier" 
        class="org.openehealth.ipf.tutorials.osgi.service.impl.SampleTransmogrifier">
        <property name="prefix" value= "${service.prefix}" />
    </bean>

    <bean id="genderTransmogrifier" 
        class="org.openehealth.ipf.tutorials.osgi.service.impl.GenderTransmogrifier">
    </bean>

</beans>